<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UPlant.RegisterPage"
             Title="Регистрация"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}"
             NavigationPage.HasNavigationBar="False">


    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">


            <!-- Логотип приложения -->
            <Image HeightRequest="200"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   Source="{AppThemeBinding Light='uplantlight.png', Dark='uplantdark.png'}"
                   Margin="0,0,0,20"/>


            <!-- Заголовок -->
            <Grid BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}"
                  HeightRequest="50"
                  ColumnDefinitions="*">

                <Label Text="Регистрация"
                       Grid.Column="0"
                       FontSize="22"
                       Margin="20,15,0,0"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"/>
            </Grid>


            <VerticalStackLayout VerticalOptions="Center" Padding="20" Spacing="15">
                <Label Text="Email:" 
                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"
                       FontSize="18"/>
                <Entry x:Name="EmailEntry" 
                       Placeholder="Введите email" 
                       Keyboard="Email"
                       Margin="0,0,0,15"/>

                <Label Text="Пароль:" 
                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"
                       FontSize="18"/>
                <Entry x:Name="PasswordEntry" 
                       Placeholder="Введите пароль" 
                       IsPassword="True"
                       Margin="0,0,0,25"/>

                <!-- Кнопки в стиле главной страницы -->
                <Border Padding="8"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}"
                        Stroke="{AppThemeBinding Light=Black, Dark=White}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        Margin="0,0,0,15">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignUpClicked"/>
                    </Border.GestureRecognizers>
                    <Label Text="Зарегистрироваться"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="18"/>
                </Border>

                <Border Padding="8"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}"
                        Stroke="{AppThemeBinding Light=Black, Dark=White}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        HorizontalOptions="Fill"
                        HeightRequest="50">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignInClicked"/>
                    </Border.GestureRecognizers>
                    <Label Text="Войти"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="18"/>
                </Border>

                <Label x:Name="StatusLabel" 
                       Text="" 
                       TextColor="Red" 
                       HorizontalOptions="Center"
                       Margin="0,15,0,0"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
