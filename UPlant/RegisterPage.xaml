<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UPlant.RegisterPage">


    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Email:" />
        <Entry x:Name="EmailEntry" Placeholder="Enter email" Keyboard="Email" />

        <Label Text="Password:" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" />

        <Button Text="Sign Up" Clicked="OnSignUpClicked" />
        <Button Text="Sign In" Clicked="OnSignInClicked" />

        <Label x:Name="StatusLabel" Text="" TextColor="Red" HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
