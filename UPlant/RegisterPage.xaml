<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UPlant.RegisterPage"
             Title="Регистрация"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}">


    <VerticalStackLayout VerticalOptions="Center" Padding="20" Spacing="15">
        <Label Text="Email:" />
        <Entry x:Name="EmailEntry" Placeholder="Введите email" Keyboard="Email" />

        <Label Text="Пароль:" />
        <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" />

        <Button Text="Зарегистрироваться" Clicked="OnSignUpClicked" />
        <Button Text="Войти" Clicked="OnSignInClicked" />

        <Label x:Name="StatusLabel" Text="" TextColor="Red" HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
