<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UPlant.PlantInfoPage"
             Title="Информация о растении"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}">
    <StackLayout Padding="10" Spacing="20">
        <Label x:Name="PlantNameLabel"
               Text="Название растения"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Start" />
        <StackLayout>
            <Label Text="Информация о растении:"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Start" />
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="True"
                               IsVisible="True"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
            <Label x:Name="WateringFrequencyLabel"
                   Text=""
                   FontSize="16"
                   TextColor="Gray"
                   IsVisible="False"
                   HorizontalOptions="FillAndExpand" />
        </StackLayout>
        <Button x:Name="AddButton"
                Text="Добавить растение"
                Clicked="OnAddPlantClicked"
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>