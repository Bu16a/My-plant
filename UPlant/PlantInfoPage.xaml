<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UPlant.PlantInfoPage"
             Title="Информация о растении"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <Grid Grid.Row="0"
              BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}"
              HeightRequest="50"
              ColumnDefinitions="Auto,*">

            <ImageButton Grid.Column="0"
                         Source="back.png"
                         HeightRequest="32"
                         WidthRequest="32"
                         Margin="10,15,0,0"
                         BackgroundColor="Transparent"
                         Clicked="OnBackButtonClicked" />

            <Label Text="Информация о растении"
                   Grid.Column="1"
                   FontSize="22"
                   Margin="20,15,0,0"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}" />
        </Grid>

        <!-- Основной контент с прокруткой -->
        <ScrollView Grid.Row="1" Margin="20,0">
            <VerticalStackLayout Spacing="15">
                <Label x:Name="PlantNameLabel"
                       Text="Название растения"
                       FontSize="24"
                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Start" />
                <Image x:Name="PhotoImage"
                       Aspect="AspectFill"
                       HeightRequest="300"
                       VerticalOptions="Center"/>
                <Label Text="Информация о растении:"
                       FontSize="18"
                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"
                       Margin="0,10,0,10"/>
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsRunning="True"
                                   IsVisible="True"
                                   HorizontalOptions="Center" />
                <Label x:Name="PlantInfoLabel"
                       Text=""
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource SecondaryTextColor}}"
                       IsVisible="False"
                       HorizontalOptions="FillAndExpand" />

                <!-- Кнопка "Добавить растение" в стиле кнопки входа -->
                <Border Padding="8"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightGreenBackground}, Dark={StaticResource DarkPageBackground}}"
                        Stroke="{AppThemeBinding Light=Black, Dark=White}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        Margin="0,20,0,20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddPlantClicked"/>
                    </Border.GestureRecognizers>
                    <Label Text="Добавить растение"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource SecondaryTextColor}}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="18"/>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>